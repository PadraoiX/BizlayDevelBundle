{% extends '::base.html.twig' %}

{% import "CrudBundle::datatable.html.twig"  as datatable %}

{% block body %}

<div class="row m-b-md">
        <div class="col-sm-12">
            <h1 class="m-b-xs text-black">%ENTITYNAME%</h1>
            <ol class="breadcrumb m-n">
                <li>
                    <a href="#">Início</a>
                </li>
                <li>Geral</li>
                <li class="active">%ENTITYNAME%</li>
            </ol>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">

            {{ datatable.generateHTML(
                    formData,
                    '%ENTITYNAME%',
                    formTitleAction,
                    ['Id', 'Ações'],
                    createRoute,
                    exportExcelRoute,
                    exportPdfRoute,
                    '%BUNDLENAME%:%ENTITYNAME%:searchform.html.twig'
            ) }}

        </div>
    </div>
</div>
{% endblock %}

{% block script %}
    {{ datatable.generateScript(
            searchRoute,
            ['g.id', 'g.acoes'],
            csrf,
            deleteRoute
    ) }}
{% endblock %}